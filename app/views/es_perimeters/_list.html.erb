<%# app/views/students/_list.html.erb %>

<div id="filterrific_results">
  <br>

  <div class="container">
    <%= page_entries_info es_perimeters, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    <%= render_filterrific_spinner %>
  </div>

  <br>

  <div class="container-fluid">
    <div align="center" style="overflow-x: auto">

<table class="table table-striped table-responsive table-hover table-taco">
  <thead>
    <tr>
      <th scope="col">&nbsp;&nbsp;&nbsp;ESP ID</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Network Address</th>
      <th scope="col" class="text-center">External Routable Connectivity</th>
      <th scope="col" class="text-center">Interactive Remote Access</th>
      <th scope="col" class="text-center">EACMS for Interactive Remote Access</th>
      <th scope="col" class="text-center">Created At</th>
      <th scope="col" class="text-center">Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @es_perimeters.each do |es_perimeter| %>
      <tr>
        <td>
        <div class="dropdown dropright">
                <button class="btn btn-link dropdown-toggle" type="button" id="<%= es_perimeter.esp_id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= es_perimeter.esp_id %>
                </button>
                <div class="dropdown-menu" aria-labelledby="<%= es_perimeter.esp_id %>">
                  <a><%= link_to 'Show', es_perimeter, class: "dropdown-item" %></a>
                  <a><%= link_to 'Edit', edit_es_perimeter_path(es_perimeter), class: "dropdown-item"%></a>  
                  <a><%= link_to "Delete", es_perimeter, :method=>:delete, :class=>:destroy, data: { confirm: 'Are you sure you want to delete the selected ESP?' },class: "dropdown-item" %></a>
                </div>
              </div>
            </td>
        <td><%= es_perimeter.esp_description %></td>
        <td class="text-center"><%= es_perimeter.esp_network %></td>
        <td class="text-center"><%= es_perimeter.esp_conn %></td>
        <td class="text-center"><%= es_perimeter.esp_remote %></td>
        <td class="text-center"><%= es_perimeter.esp_eacms %></td>
        <td class="text-center"><%= es_perimeter.created_at.strftime("%m-%d-%Y, %r") %></td>
            <td class="text-center"><%= es_perimeter.updated_at.strftime("%m-%d-%Y, %r") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="divider"></div>
<br>

<div class="container">
    <%= will_paginate es_perimeters, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
  </div>

</div>
</div>
<br>